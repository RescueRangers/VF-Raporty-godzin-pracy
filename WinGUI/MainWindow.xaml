<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinGUI"
        xmlns:Properties="clr-namespace:WinGUI.Properties" x:Class="WinGUI.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="450" MinHeight="400" MinWidth="450">

    <TabControl Width="auto" Height="auto">
        <TabItem Header="Raporty">
            <Grid Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="13"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="46"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="89*"/>
                    <RowDefinition Height="90*"/>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="27*"/>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="27*"/>
                    <RowDefinition Height="10"/>
                </Grid.RowDefinitions>
                <Canvas Grid.ColumnSpan="5" Grid.Column="1" Grid.Row="10">
                    <Button x:Name="Exit" Click="Exit_Click" Content="Exit" Height="27" Width="121"/>
                    <Button x:Name="Execute" IsEnabled="False" Click="Execute_Click" Content="Zapisz raporty" Height="27" Canvas.Left="145" Width="121"/>
                    <Button x:Name="Open" Click="Open_Click" Content="Open" Height="27" Canvas.Left="290" Width="121"/>
                </Canvas>
                <Image Source="Resources/vf_logo300x300.png" x:Name="Logo" Grid.Row="0" Grid.Column="1" />
                <CheckBox x:Name="JedenPracownik" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="7" Content="Raport dla jednego pracownika" Checked="JedenPracownik_Checked" IsEnabled="False" FontSize="10"/>
                <DataGrid x:Name="WyborPracownika" Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="1" Grid.RowSpan="5" IsEnabled="False" FontFamily="Verdana" FontSize="14"/>
            </Grid>
        </TabItem>
        <TabItem Header="Nagłówki">
            <Grid Background="#FFE5E5E5">
                <Grid.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF933535" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.OpacityMask>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="10"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="Tlumaczenia" Grid.Column="1" Grid.Row="1"/>
                <DataGrid  Visibility="Collapsed" x:Name="NieTlumaczone" Grid.Column="1" Grid.Row="3"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
