<Window x:Class="WinGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" MinHeight="350" MaxHeight="350" MinWidth="525" MaxWidth="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="9" Name="Exit">Exit</Button>
        <Button Grid.Column="3" Grid.Row="9" Name="Execute">Execute</Button>
        <Button Grid.Column="5" Grid.Row="9" Name="Open" Click="Open_Click">Open</Button>
        <Image Source="{DynamicResource Logo}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5"/>
        <CheckBox Name="JedenPracownik" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="7" Content="Raport dla jednego pracownika"/>
        <ProgressBar Name="PostepRaportu" Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="3"/>
        <ComboBox Name="WyborPracownika" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="5"/>
    </Grid>
</Window>
